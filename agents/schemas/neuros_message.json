{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AUREN Agent Message Schema (NEUROS)",
  "description": "Defines the standard message format for data consumed and produced by the NEUROS agent.",
  "type": "object",
  "properties": {
    "user_id": {
      "type": "string",
      "description": "Unique identifier for the user."
    },
    "session_id": {
      "type": "string",
      "description": "Identifier for the current interaction session."
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the message."
    },
    "source": {
      "type": "string",
      "description": "The origin of the message (e.g., 'pwa', 'wearable-api')."
    },
    "payload": {
      "type": "object",
      "properties": {
        "biometric_data": {
          "type": "object",
          "properties": {
            "hrv_rmssd": { "type": "number" },
            "cns_fatigue_index": { "type": "number" }
          }
        },
        "user_input": {
          "type": "string"
        }
      },
      "required": ["user_input"]
    }
  },
  "required": ["user_id", "session_id", "timestamp", "payload"]
} 