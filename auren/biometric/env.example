# =============================================================================
# AUREN BIOMETRIC BRIDGE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# =============================================================================
# CORE INFRASTRUCTURE (REQUIRED)
# =============================================================================

# PostgreSQL Database
POSTGRES_URL=postgresql://auren_user:your_password@localhost:5432/auren_db

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Kafka Brokers (comma-separated for multiple brokers)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# =============================================================================
# WEARABLE API CREDENTIALS (REQUIRED)
# =============================================================================

# Oura Ring API
# Get your token from: https://cloud.ouraring.com/personal-access-tokens
OURA_ACCESS_TOKEN=your_oura_personal_access_token_here

# WHOOP Band OAuth2
# Register your app at: https://developer.whoop.com/
WHOOP_CLIENT_ID=your_whoop_client_id_here
WHOOP_CLIENT_SECRET=your_whoop_client_secret_here

# =============================================================================
# OPTIONAL SETTINGS (Have defaults)
# =============================================================================

# Concurrency Control
MAX_CONCURRENT_WEBHOOKS=50  # Max webhooks to process simultaneously

# Redis TTL
REDIS_TTL_SECONDS=86400  # 24 hours cache TTL

# Time Series Data
MAX_TIMESERIES_ENTRIES=10000  # Max biometric entries per user

# Feature Flags
HEALTHKIT_ENABLED=true  # Enable/disable HealthKit processing

# Connection Pool Settings
PG_POOL_MIN_SIZE=5
PG_POOL_MAX_SIZE=20
AIOHTTP_CONNECTOR_LIMIT=100

# OAuth Settings
OAUTH_LOCK_TTL_SECONDS=20  # Lock timeout for token refresh

# =============================================================================
# WEBHOOK SECURITY (Optional but recommended for production)
# =============================================================================

# Webhook signature verification secrets
OURA_WEBHOOK_SECRET=your_oura_webhook_secret_here
WHOOP_WEBHOOK_SECRET=your_whoop_webhook_secret_here

# API key for HealthKit pushes (since they don't have webhook signatures)
HEALTHKIT_API_KEY=generate_a_secure_api_key_here

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# HIPAA Compliance (set to false ONLY in development to see unmasked user IDs)
HIPAA_COMPLIANT=true

# Prometheus Metrics Port
METRICS_PORT=9000

# =============================================================================
# PRODUCTION SETTINGS (Only needed in production)
# =============================================================================

# AWS Configuration (for Secrets Manager)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Sentry Error Tracking
# SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# OpenTelemetry Tracing
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
# OTEL_SERVICE_NAME=auren-biometric-bridge

# =============================================================================
# DEVELOPMENT TOOLS (Only for local development)
# =============================================================================

# Mock Data Generation
# ENABLE_MOCK_DATA=false

# Auto-reload on code changes
# RELOAD=true

# Debug SQL Queries
# ECHO_SQL=false 