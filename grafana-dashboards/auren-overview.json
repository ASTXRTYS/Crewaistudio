{
  "dashboard": {
    "id": null,
    "title": "AUREN Production Overview",
    "tags": ["auren", "production"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(neuros_requests_total[5m]))",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Response Time Distribution",
        "type": "histogram",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(neuros_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "System Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"neuros-prod\"}",
            "legendFormat": "NEUROS Status"
          },
          {
            "expr": "up{job=\"otel-collector\"}",
            "legendFormat": "OTel Collector"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Disk Usage",
        "type": "gauge",
        "targets": [
          {
            "expr": "(1 - (node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"})) * 100",
            "legendFormat": "Disk Usage %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "OpenTelemetry Collector Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "otelcol_processor_refused_spans_total",
            "legendFormat": "Refused Spans"
          },
          {
            "expr": "otelcol_exporter_sent_spans_total",
            "legendFormat": "Sent Spans"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
} 